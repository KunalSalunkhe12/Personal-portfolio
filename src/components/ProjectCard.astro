---
const { projectImage, name, githubURL, liveURL, techStack } = Astro.props;
---

<div class="border-primary border-2 rounded-xl p-1 md:p-4">
  <img
    class="md:w-[30rem] rounded-lg"
    src={projectImage}
    alt="YumYum project home page"
  />
  <div class="flex flex-col gap-2">
    <h3 class="text-lg sm:text-xl md:text-2xl mt-2">{name}</h3>
    <div>
      <img
        class=""
        src={`https://skillicons.dev/icons?i=${techStack.join(",")}`}
        alt="Tech stack images"
      />
    </div>
    <div class="flex gap-4 font-light md:text-lg hover:text-gray-500 mt-4">
      <a class="hover:text-primary duration-300 ease-in-out" href={githubURL}
        >Github</a
      >
      <a class="hover:text-primary duration-300 ease-in-out" href={liveURL}
        >Live</a
      >
    </div>
  </div>
</div>
