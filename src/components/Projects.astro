---
import projectImage from "../images/project-img.png";
import ProjectCard from "./ProjectCard.astro";
import { projectsData } from "../constant";
---

<section id="Projects" class="mb-52">
  <h2 class="text-2xl sm:text-4xl md:text-6xl font-bold text-center">
    My <span class="text-primary">Projects</span>
  </h2>
  <div
    class="flex flex-col md:flex-row justify-evenly items-center my-20 gap-10"
  >
    <img
      class="w-[10rem] md:w-[20rem]"
      src={projectImage}
      alt="Boy holding coffee cup"
    />
    <div class="flex flex-col gap-16">
      {
        projectsData.map((project) => {
          return (
            <ProjectCard
              name={project.name}
              projectImage={project.image}
              githubURL={project.githubURL}
              liveURL={project.liveURL}
              techStack={project.techStack}
            />
          );
        })
      }
    </div>
  </div>
</section>
